{
  "name": "ZenDesk Refresher",
  "description": "Automatically refreshes the ZenDesk Ticket Counts for the different views",
  "version": "0.1.3",
  "manifest_version": 3,
  "background": {
      "scripts": ["background.js"]
    },
    "action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "icons":{
      "128":"icon.png"
    },
  "permissions":[
    "scripting", "webNavigation", "storage", "tabs", "history"
  ],
  "host_permissions":[
    "https://*.zendesk.com/agent/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "scottwillardmaxwell@pm.me"
    }
  }  
}