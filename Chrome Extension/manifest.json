{
  "name": "Zendesk Refresher",
  "description": "Automatically refreshes the ZenDesk Ticket Counts for the different views",
  "version": "0.1.6",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons":{
    "128":"icon.png"
  },
  "permissions": ["storage"],
  "content_scripts": [   
    {
        "run_at": "document_start",
        "js": ["contentscript.js"],
        "matches": [
            "https://*.zendesk.com/agent/*"
        ]
    }
  ]
}